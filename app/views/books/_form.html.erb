<%= render 'shared/errors',obj: book %>
<%= form_with(model: book, local: true,:html => {class: "form-horizontal",role:"form"}) do |form| %>
  

  <div class="form-group row">
 
    <%= form.label :name, class: "col-sm-2 col-form-label" %>
    
    <div class="col-sm-8">
    <%= form.text_field :name,class: "form-control", placeholder: "Book Name", autofocus: true %>
  </div>
  </div>
  <div class="form-group row">
 
  <%= form.label :Author, class: "col-sm-2 col-form-label" %>
  
  <div class="col-sm-8">
  <%= form.text_field :author ,class: "form-control", placeholder: "Author Name", autofocus: true %>
</div>
</div>
<div class="form-group row">
 
<%= form.label :Price, class: "col-sm-2 col-form-label" %>

<div class="col-sm-8">
<%= form.text_field :price,class: "form-control", autofocus: true %>
</div>
</div>
  <div class="form-group row",align="center">
    <div class="col-sm-offset-2 col-auto">
        <%= form.submit class: "btn btn-primary btn-lg offset-md-8" %>
    </div>
    </div>
  
<% end %>
   
  