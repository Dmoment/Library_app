<h1 align='center'> Login </h1>

<%= form_with scope: :session, local: true,:html => {class: "form-horizontal",role:"form"},url: login_path do |form| %>
  

    <div class="form-group row">
   
      <%= form.label :Email, class: "col-sm-2 col-form-label" %>
      
      <div class="col-sm-8">
      <%= form.email_field :email,class: "form-control", placeholder: "Enter email", autofocus: true %>
    </div>
    </div>
    <div class="form-group row">
   
      <%= form.label :Password, class: "col-sm-2 col-form-label" %>
      
      <div class="col-sm-8">
      <%= form.password_field :password,class: "form-control", placeholder: "Enter password", autofocus: true %>
    </div>
    </div>
    <div class="form-group row",align="center">
      <div class="col-sm-offset-2 col-auto">
          <%= form.submit "login",class: "btn btn-primary btn-lg offset-md-8" %>
      </div>
      </div>
<% end %>